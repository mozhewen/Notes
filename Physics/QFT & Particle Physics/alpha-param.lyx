\[
q^{2}J_{+}\left(q^{2},1,1,1,1,1\right)=-\frac{\pi^{2}}{3}\left(\frac{2}{\epsilon}+4+8\log2-4\log q^{2}\right)-8\zeta\left(3\right)+\mathcal{O}\left(\epsilon\right)
\]

\end_inset


\end_layout

\begin_layout Standard
对于
